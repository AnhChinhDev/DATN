<body>
    <!-- Add your site or application content here -->
    <!--pos page start-->
    <div class="pos_page">
        <div class="container">
            <!--pos page inner-->
            <div class="pos_page_inner">
                <!--header area -->
                @Html.Partial("~/Views/Shared/Header.cshtml")
                <!--header end -->
                <!--breadcrumbs area start-->
                <div class="breadcrumbs_area">
                    <div class="row">
                        <div class="col-12">
                            <div class="breadcrumb_content">
                                <ul>
                                    <li><a href="index.html">Trang chủ</a></li>
                                    <li><i class="fa fa-angle-right"></i></li>
                                    <li>Đăng ký</li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
                <!--breadcrumbs area end-->
                <!-- customer login start -->
                <div class="customer_login">
                    @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]))
                    {
                        <h3 class="form-title" style="color:red">Email da ton tai</h3>
                    }
                    <div class="row" style="justify-content:center;">
                        <!--login area start-->
                        <div class="col-lg-6 col-md-6">
                            <div class="account_form">
                                <h2>Đăng ký</h2>
                                <form action="@ViewBag.action" method="post">
                                    <p>
                                        <label>Email <span>*</span></label>
                                        <input type="text" name="Email">
                                    </p>
                                    <p>
                                        <label>Nhập họ và tên<span>*</span></label>
                                        <input type="text" name="Name">
                                    </p>
                                    <p>
                                        <label>Nhập số điện thoại <span>*</span></label>
                                        <input type="text" name="Phone">
                                    </p>
                                    <p>
                                        <label>Nhập địa chỉ<span>*</span></label>
                                        <input type="text" name="Address">
                                    </p>
                                    <p>
                                        <label>Mật khẩu <span>*</span></label>
                                        <input type="password" name="Password">
                                    </p>
                                    <div class="login_submit">
                                        <button type="submit" name="submit">Đăng ký</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <!--login area start-->

                    </div>
                </div>
                <!-- customer login end -->

            </div>
            <!--pos page inner end-->
        </div>
    </div>
    <!--pos page end-->
