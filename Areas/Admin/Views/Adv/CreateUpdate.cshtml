@{
    //load file layout vao day
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@using webbanhang.Models
@functions{
    public MyDBContext db = new MyDBContext();
}
<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">Tạo mới hoặc cập nhật</div>
        <div class="panel-body">
            @* muon upload duoc file thi phai co thuoc tinh enctype=mulipart/form-data *@
            <form method="post" enctype="multipart/form-data" action="">
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Tên</div>
                    <div class="col-md-10">
                        <input type="text" value="@if (Model != null) {<text>@Model.Name</text>}" name="Name" class="form-control" required>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Vị trí</div>
                    <div class="col-md-10">
                        <select name="Position" class="form-control" style="width:250px;">
                            <option @if (Model != null && Model.Position == 1) { <text> selected</text> } value="1">Trái (Dưới slide show)</option>
                            <option @if (Model != null && Model.Position == 2) { <text> selected</text> } value="2">Phải (Dưới slide show)</option>
                            <option @if (Model != null && Model.Position == 3) { <text> selected</text> } value="3">Trang sản phẩm - Banner</option>
                            <option @if (Model != null && Model.Position == 4) { <text> selected</text> } value="4">Trang sản phẩm - Dưới TAG</option>
                            <option @if (Model != null && Model.Position == 5) { <text> selected</text> } value="5">Trang sản phẩm - Dưới Popular products</option>
                        </select>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Ảnh</div>
                    <div class="col-md-10">
                        <input type="file" name="Photo" />
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <input type="submit" value="Cập nhật" class="btn btn-primary">
                    </div>
                </div>
                <!-- end rows -->
            </form>
        </div>
    </div>
</div>